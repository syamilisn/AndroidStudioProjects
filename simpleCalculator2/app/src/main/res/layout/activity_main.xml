<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPLE CALCULATOR"

        android:textColor="#ff0000"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_editor_absoluteY="10dp"
        />

    <TextView
        android:id="@+id/subTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"


        android:text="Results:"
        android:textColor="#0000ff"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@+id/mainTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/resultBox"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"

        android:text=""
        android:textColor="#00ff00"
        android:textSize="24sp"
        android:textStyle="bold"

        android:ems="10"
        android:inputType="number"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        app:layout_editor_absoluteY="100dp"

        />

    <Button
        android:id="@+id/b7"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"


        android:text="7"

        app:layout_constraintTop_toBottomOf="@+id/resultBox"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/b8"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="8"

        app:layout_constraintTop_toBottomOf="@+id/resultBox"
        app:layout_constraintLeft_toRightOf="@+id/b7"/>
    <Button
        android:id="@+id/b9"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="9"

        app:layout_constraintTop_toBottomOf="@+id/resultBox"
        app:layout_constraintLeft_toRightOf="@+id/b2"/>
    <Button
        android:id="@+id/bDiv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="/"

        app:layout_constraintTop_toBottomOf="@+id/resultBox"
        app:layout_constraintLeft_toRightOf="@+id/b3"/>

    <Button
        android:id="@+id/b4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"


        android:text="4"

        app:layout_constraintTop_toBottomOf="@+id/b7"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/b5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="5"

        app:layout_constraintTop_toBottomOf="@+id/b7"
        app:layout_constraintLeft_toRightOf="@+id/b7"/>
    <Button
        android:id="@+id/b6"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="6"

        app:layout_constraintTop_toBottomOf="@+id/b7"
        app:layout_constraintLeft_toRightOf="@+id/b2"/>
    <Button
        android:id="@+id/bMul"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="*"

        app:layout_constraintTop_toBottomOf="@+id/b7"
        app:layout_constraintLeft_toRightOf="@+id/b3"/>
    <Button
        android:id="@+id/b1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"


        android:text="1"

        app:layout_constraintTop_toBottomOf="@+id/b4"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/b2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="2"

        app:layout_constraintTop_toBottomOf="@+id/b4"
        app:layout_constraintLeft_toRightOf="@+id/b4"/>
    <Button
        android:id="@+id/b3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="3"

        app:layout_constraintTop_toBottomOf="@+id/b4"
        app:layout_constraintLeft_toRightOf="@+id/b5"/>
    <Button
        android:id="@+id/bSub"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="-"

        app:layout_constraintTop_toBottomOf="@+id/b4"
        app:layout_constraintLeft_toRightOf="@+id/b6"/>
    <Button
        android:id="@+id/bDot"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"


        android:text="."

        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/b0"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="0"

        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:layout_constraintLeft_toRightOf="@+id/b1"/>
    <Button
        android:id="@+id/bEqu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="="

        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:layout_constraintLeft_toRightOf="@+id/b2"/>

    <Button
        android:id="@+id/bAdd"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="+"

        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:layout_constraintLeft_toRightOf="@+id/b3"/>

    <Button
        android:id="@+id/bC"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"


        android:text="C"

        app:layout_constraintTop_toBottomOf="@+id/bDot"
        app:layout_constraintLeft_toRightOf="@+id/bEqu"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="10dp"
    android:background="#E1B1E1"
    
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/mainTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"

        android:text="LOGIN PAGE"
        android:textColor="#6C516C"
        android:textSize="36dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_editor_absoluteY="20dp" />

    <TextView
        android:id="@+id/subTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Enter the details:"
        android:textColor="#0000ff"
        android:textSize="24dp"
        android:textStyle="italic"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle2"

        />
    <TextView
        android:id="@+id/username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"

        android:text="username:"
        android:textColor="#0000ff"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@+id/mainTitle2"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"

        android:text="password:"
        android:textColor="#0000ff"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@+id/mainTitle2"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <EditText
        android:id="@+id/username2ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:ems="10"

        app:layout_constraintLeft_toRightOf="@+id/username2"
        app:layout_constraintTop_toBottomOf="@id/mainTitle2"


        />
    <EditText
        android:id="@+id/password2ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:ems="10"

        app:layout_constraintLeft_toRightOf="@+id/password2"
        app:layout_constraintTop_toBottomOf="@id/mainTitle2"


        />

    <Button
        android:id="@+id/Blogin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"

        android:text="LOGIN"

        app:layout_constraintTop_toBottomOf="@+id/password2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>